# create 4 TABLES:

A: BOOKS TABLE

create table books (
book_id varchar(200) primary key,
title varchar(200),
genre varchar(200),
price int
);

B: AUTHORS TABLE

create table authors (
author_id varchar(200) primary key,
name varchar(200),
nationality varchar(200)
);

C: CUSTOMERS TABLE

create table customers (
customer_id varchar(200),
name varchar(200),
email_address varchar(200),
phone_number int
);

D: ORDER STATUS TABLE

create table orders (
book_id varchar(200),
customer_id varchar(200),
order_date date,
shipping_status varchar(200),
payment_method varchar(200)
);
